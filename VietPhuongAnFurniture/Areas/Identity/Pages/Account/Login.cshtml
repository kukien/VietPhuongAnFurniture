@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="breadcrumb-box">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="index.html">Home</a> </li>
            <li class="active">Login</li>
        </ul>
    </div>
</div><!-- .breadcrumb-box -->
<section id="main">
    @*<header class="page-header">
        <div class="container">
            <h1 class="title">Đăng nhập</h1>
        </div>
    </header>*@
    <div class="container">
        <div class="row">
            <div class="content login col-sm-12 col-md-12">
                <div class="row">
                    <div class="col-sm-6 col-md-6">
                        <div class="new-costumers">
                            <h3 class="title">New costumers</h3>
                            <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
                            <button class="btn btn-default">Create an Account</button>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6">
                        <form class="register-form" id="account" method="post">
                            <h3 class="title">Đăng nhập</h3>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            @*<p>If you have an account with us, please log in.</p>*@
                            <div class="form-group">
                                <label asp-for="Input.Email">Tài khoản</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password">Mật khẩu</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class=" buttons-box clearfix">
                                <button type="submit" class="btn pull-left btn-default">Log in</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .container -->
</section><!-- #main -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
